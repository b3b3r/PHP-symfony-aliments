{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block myTitle %}page de connexion{% endblock %}

{% block body %}
  {% if error %}
    <div class="alert alert-danger">
      {{error.messageKey | trans(error.messageData, 'security')}}
    </div>
  {% endif %}
    <form action="{{path('connection')}}" method="POST">
      <div class="form-group">
        <label>Login: </label>
        <input type="text" required name="_username" class="form-control"/>
      </div>
      <div class="form-group">
        <label>Password: </label>
        <input type="password" required name="_password" class="form-control"/>
      </div>
      <input type="submit" value="s'identifier" class="btn btn-primary"/>
    </form>
{% endblock %}
