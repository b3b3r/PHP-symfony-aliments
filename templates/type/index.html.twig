{% extends 'base.html.twig' %}

{% block title %}Types{% endblock %}
{% block myTitle %}Liste des types{% endblock %}

{% block body %}
    <div class="row">
        {% for type in types %}
            <div clas="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card border-primary mb-3 mx-auto" style="max-width:20rem">
                    <div class="card-header text-center">
                        <img src="{{asset('images/types/' ~ type.picture)}}" class="aliments-picture card-img-top" />
                    </div>
                    <div class="card-body">
                        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary"> {{type.label}}</h3>
                        {% for aliment in type.aliments %}
                            <p>{{aliment.name}}<p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    <div>
{% endblock %}
